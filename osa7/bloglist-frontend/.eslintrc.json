
{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "jsx"],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", "jsx"]
      }
    ],
    "prettier/prettier": "error",
    "max-len": ["error", 80],
    "semi":[1, "never"],
    "react/prefer-stateless-function": "off",
    "react/prop-types": 0,
    "react/destructuring-assignment": 0

    
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack-common-config.js"
      }
    }
  }
}
